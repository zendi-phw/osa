// set the dimensions and margins of the graph
var margin = {top: 10, right: 30, bottom: 30, left: 40},
  width = 400 - margin.left - margin.right,
  height = 400 - margin.top - margin.bottom;

// append the svg object to the body of the page
var svg = d3.select(`#` + `${namecatid}`)
.append("svg")
  .attr("width", width + margin.left + margin.right)
  .attr("height", height + margin.top + margin.bottom)
.append("g")
  .attr("transform",
        "translate(" + margin.left + "," + margin.top + ")");

// Get data from data generated by lib function osa_calculate_answer_data_for_boxplot.

// Show the X scale
var x = d3.scaleLinear()
  .domain([0,7])
  .range([width, 0]);
svg.call(d3.axisBottom(x))

// a few features for the box
var center = 200
var width = 100

// Show the main vertical line
svg
.append("line")
  .attr("y1", center)
  .attr("y2", center)
  .attr("x1", x(min) )
  .attr("x2", x(max) )
  .attr("stroke", "black")

// Show the box
svg
.append("rect")
  .attr("y", center - width/2)
  .attr("x", x(q3) )
  .attr("width", (x(q1)-x(q3)) )
  .attr("height", width )
  .attr("stroke", "black")
  .style("fill", "#69b3a2")

// show median, min and max horizontal lines
svg
.selectAll("toto")
.data([min, median, max])
.enter()
.append("line")
  .attr("y1", center-width/2)
  .attr("y2", center+width/2)
  .attr("x1", function(d){ return(x(d))} )
  .attr("x2", function(d){ return(x(d))} )
  .attr("stroke", "black")
//  .attr("stroke", "red")

// show median in a specific color depending on individual value
svg
.selectAll("toto")
.data([median])
.enter()
.append("line")
  .attr("y1", (center-width/2)-10)
  .attr("y2", (center+width/2)+10)
  .attr("x1", function(d){ return(x(d))} )
  .attr("x2", function(d){ return(x(d))} )
  .attr("stroke", indvalcol)
//alert({indvalcol})

// add defined value by teacher for each category only show when visibility is set to true
svg
  .append("line")
  .attr("y1", center-width/2)
  .attr("y2", center+width/2)
  .attr("x1", x(definedcatval) )
  .attr("x2", x(definedcatval) )
  .attr("stroke", "green")
  .style("visibility", visibility)
